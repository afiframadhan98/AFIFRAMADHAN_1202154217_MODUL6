<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.intel.afiframadhan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.intel.afiframadhan.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.intel.afiframadhan.RegisterActivity"
            android:parentActivityName="com.example.intel.afiframadhan.AuthActivity" />
        <activity android:name="com.example.intel.afiframadhan.MainActivity" />
        <activity
            android:name="com.example.intel.afiframadhan.PostActivity"
            android:parentActivityName="com.example.intel.afiframadhan.MainActivity" />
        <activity android:name="com.example.intel.afiframadhan.DetailActivity"
            android:parentActivityName="com.example.intel.afiframadhan.MainActivity"></activity>
    </application>

</manifest>